@model ModelLayer.DTO.ProveedorViewModel

@using (Html.BeginForm("Create", "Proveedores", FormMethod.Post, new { id = "createProveedorForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h5 class="modal-title">Agregar Proveedor</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
    </div>

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.NombreProveedor, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.NombreProveedor, new { @class = "form-control", placeholder = "Nombre de la empresa", required = "required" })
            @Html.ValidationMessageFor(m => m.NombreProveedor, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.NombreContacto, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.NombreContacto, new { @class = "form-control", placeholder = "Nombre del contacto", required = "required" })
            @Html.ValidationMessageFor(m => m.NombreContacto, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Telefono, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Teléfono de contacto", required = "required" })
            @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
}
