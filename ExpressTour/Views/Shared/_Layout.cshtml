<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpressTour</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">ExpressTour</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">Sobre Nosotros</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Administración</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
