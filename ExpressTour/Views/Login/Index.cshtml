@model ModelLayer.DTO.UserViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Iniciar Sesión";
}
<!-- Resto de la vista -->

<section class="vh-100 bg-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card login-card">
          <div class="row g-0">
            <!-- Imagen lateral: asegúrate de tener la imagen en la ruta correcta -->
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="~/Content/Image/img/login-image.jpeg" alt="login form" class="img-fluid login-img" />
            </div>
            <!-- Formulario de login -->
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post" action="@Url.Action("Login", "Login")">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3 icon-custom"></i>
                    <span class="h1 fw-bold mb-0">ExpressTour!</span>
                  </div>
                  <h5 class="fw-normal mb-3 pb-3 letter-spacing-1">Inicia sesión en tu cuenta</h5>
                  
                  @if (ViewBag.Error != null)
                  {
                      <div class="alert alert-danger">@ViewBag.Error</div>
                  }
                  
                  <div class="form-outline mb-4">
                    @Html.LabelFor(m => m.NombreUsuario, "Usuario", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control form-control-lg", placeholder = "Ingresa tu usuario"})
                  </div>
                  <div class="form-outline mb-4">
                    @Html.LabelFor(m => m.Contrasena, "Contraseña", new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control form-control-lg", placeholder = "Ingresa tu contraseña"})
                  </div>
                  <div class="pt-1 mb-4">
                      <button class="btn btn-custom" type="submit">Login</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
