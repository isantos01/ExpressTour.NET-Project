@model IEnumerable<ModelLayer.DTO.ClientViewModel>
@{
    Layout = "~/Views/Shared/_ClientesLayout.cshtml";
    ViewBag.Title = "Listado de Clientes";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Listado de Clientes</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Correo</td>
                    <td>@cliente.Telefono</td>
                    <td>@cliente.Direccion</td>
                    <td>
                        <a href="@Url.Action("Edit", "Clientes", new { id = cliente.Id })" class="btn btn-sm btn-primary">Editar</a>
                        <a href="@Url.Action("Delete", "Clientes", new { id = cliente.Id })" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a href="@Url.Action("Create", "Clientes")" class="btn btn-success">Agregar Cliente</a>
    </div>
</div>
