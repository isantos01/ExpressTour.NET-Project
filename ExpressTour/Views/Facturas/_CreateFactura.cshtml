@model ModelLayer.DTO.FacturasViewModel

<div class="modal-header">
    <h5 class="modal-title">Agregar Factura</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
</div>

@using (Html.BeginForm("Create", "Facturas", FormMethod.Post, new { id = "createFacturaForm" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.IdReserva, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.IdReserva, new
            {
                @class = "form-control",
                type = "number",
                placeholder = "Ingresa el ID de la reserva",
                required = "required"
            })
            @Html.ValidationMessageFor(m => m.IdReserva, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Total, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Total, new
            {
                @class = "form-control",
                placeholder = "Ingresa el total",
                required = "required",
                type = "number",
                step = "0.01",
                min = "0"
            })
            @Html.ValidationMessageFor(m => m.Total, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Fecha_Emision, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Fecha_Emision, new
            {
                @class = "form-control",
                type = "date",
                value = Model.Fecha_Emision.ToString("yyyy-MM-dd")
            })
            @Html.ValidationMessageFor(m => m.Fecha_Emision, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" id="submitFacturaAjax" class="btn btn-success">Guardar</button>
    </div>
}
