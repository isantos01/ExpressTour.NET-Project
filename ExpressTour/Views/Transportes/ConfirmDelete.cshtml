@model ModelLayer.DTO.TransporteViewModel
@{
    Layout = "~/Views/Shared/_ClientesLayout.cshtml"; // Puedes crear uno específico como _TransporteLayout si deseas
    ViewBag.Title = "Listado de Transportes";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirmar Eliminación
            </h4>
        </div>

        <div class="card-body">
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                Estás a punto de eliminar al cliente <strong>@Model.Tipo</strong>. Esta acción también eliminará sus reservas, Paquete u otras excursiones asociadas. ¿Deseas continuar?
            </div>

            <div class="card border-0 bg-light mt-4">
                <div class="card-body">
                    <p><strong>Tipo:</strong> @Model.Tipo</p>
                    <p><strong>Capacidad:</strong> @Model.Capacidad</p>
                    <p><strong>IdProveedor:</strong> @Model.IdProveedor</p>
                </div>
            </div>

            @using (Html.BeginForm("DeleteComplete", "Transportes", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Transportes")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-1"></i> Eliminar definitivamente
                    </button>
                </div>
            }
        </div>
    </div>
</div>
